<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.mono.superkinoapp.MoviesActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/filmsImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/repertuar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/mondayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="pn"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

            <Button
                android:id="@+id/tuesdayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="wt"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

            <Button
                android:id="@+id/wednesdayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Å›r"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

            <Button
                android:id="@+id/thursdayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="czw"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

            <Button
                android:id="@+id/fridayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="pt"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

            <Button
                android:id="@+id/saturdayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="sb"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

            <Button
                android:id="@+id/sundayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@android:color/background_dark"
                android:text="nd"
                android:textAllCaps="false"
                android:textColor="#9453D3" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#9453D3" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zowie.zowieevents.MainActivity">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>

</RelativeLayout>
</LinearLayout>
